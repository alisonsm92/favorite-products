{
	"env": {
		"jest": true,
		"browser": true,
		"es2021": true
	},
	"extends": [
		"airbnb-base",
		"eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
		"plugin:jest/recommended",
		"plugin:import/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"jest"
	],
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".ts"]
			}
		}
	},
	"rules": {
		"indent": ["error", 4],
		"max-len": [
            "error",
            {
                "code": 120,
                "ignoreComments": true
            }
        ],
		"max-classes-per-file": ["error", 2],
		"class-methods-use-this": ["error", { "exceptMethods": ["isOk", "isFail"] }],
		"no-use-before-define": ["error", { "functions": false, "classes": false }],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
			  "ts": "never"
			}
		 ]
	}
}
